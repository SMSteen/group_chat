    <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
    <title>The Chatterbox</title>
</head>
<body>
    <div class="container-fluid">
        <div class="welcome">
            <h1>Welcome to the Chatterbox, <span id="username"></span>.</h1>
            <h3><!-- server announcement will go here! --></h3>
        </div>
        <div class="chat-board">
            <h2>Babble Board</h2>
            <div class="chats">
                <!-- server response will go here! -->
            </div>
            <div class="users">
                <h4>Other Users in Room</h4>
                <ul>
                    <!-- server response will go here! -->
                </ul>
            </div>
        </div>
        <form action="/">
            <input type="text" name="chat" id="chat" placeholder="enter your chatter here">
            <input type="submit" value="Send">
        </form>
    </div>
    <div class="container-fluid">
        <img class="footer-logo" src="images/favicon.ico" alt="logo"><footer>Polly Designs &trade;</footer>
    </div>
